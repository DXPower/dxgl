{
    "version": 4,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 20,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "default",
        "displayName": "Default Debug Config Clang+Ninja",
        "description": "Default build using Ninja generator",
        "generator": "Ninja",
        "binaryDir": "build",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "CMAKE_CXX_COMPILER": "clang++",
            "CMAKE_C_COMPILER": "clang",
            "CMAKE_CXX_STANDARD": "20",
            "CMAKE_CXX_EXTENSIONS": "OFF",
            "CMAKE_CXX_FLAGS": "$env{CXX_WARNINGS} $env{CXX_OPTS}",
            "CMAKE_EXPORT_COMPILE_COMMANDS": "True",
            "BOOST_ROOT": "C:\\Program Files\\Boost\\Boost_1_84"
        },
        "environment": {
            "CXX_WARNINGS": "-Wall -Wextra -Werror -Wno-error=unused-variable -Wno-error=unused-function",
            "CXX_OPTS": "-O0 -fdiagnostics-color=always"

        }
      },
      {
        "name": "msvc",
        "displayName": "Default Debug Config MSVC",
        "description": "Default build using MSVC",
        "architecture": "x64",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "CMAKE_CXX_COMPILER": "cl",
            "CMAKE_C_COMPILER": "cl",
            "CMAKE_CXX_STANDARD": "23",
            "CMAKE_CXX_EXTENSIONS": "OFF",
            "CMAKE_CXX_FLAGS": "$env{CXX_WARNINGS} $env{CXX_OPTS}",
            "CMAKE_GENERATOR_PLATFORM": "x64",
            "CMAKE_EXPORT_COMPILE_COMMANDS": "True",
            "BOOST_ROOT": "C:\\Program Files\\Boost\\Boost_1_84"
        },
        "environment": {
            "CXX_WARNINGS": "/W4 /wd4458",
            "CXX_OPTS": "/EHsc"
        }
      }
      
    ],
    "buildPresets": [
      {
        "name": "default",
        "configurePreset": "default"
      },
      
      {
        "name": "msvc",
        "configurePreset": "msvc"
      }
    ]
}